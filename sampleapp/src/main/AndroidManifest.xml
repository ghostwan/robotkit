<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ghostwan.robotkit.sampleapp">

    <uses-feature android:name="com.softbank.hardware.pepper"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".DispatchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".samples.DiscussActivity"
                android:exported="true"/>
        <activity
                android:name=".samples.ListenActivity"
                android:exported="true"/>
        <activity
                android:name=".samples.HelloWorldActivity"
                android:exported="true"/>
        <activity
                android:name=".samples.HelloWorldMultiLocaleActivity"
                android:exported="true"/>
        <activity
                android:name=".samples.StopActivity"
                android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        </activity>
        <activity
                android:name=".samples.TouchActivity"
                android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        </activity>
    </application>

</manifest>